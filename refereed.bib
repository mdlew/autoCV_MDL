  urldate = {2024-11-18},
  abstract = {Amyloid-beta (A{$\beta$}42) aggregates are characteristic Alzheimer's disease signatures, but probing how their nanoscale architectures influence their growth and decay remains challenging using current technologies. Here, we apply time-lapse singlemolecule orientation-localization microscopy (SMOLM) to measure the orientations and rotational ``wobble'' of Nile blue (NB) molecules transiently binding to A{$\beta$}42 fibrils. We correlate fibril architectures measured by SMOLM with their growth and decay over the course of 5 to 20 min visualized by single-molecule localization microscopy (SMLM). We discover that stable A{$\beta$}42 fibrils tend to be well-ordered and signified by well-aligned NB orientations and small wobble. SMOLM also shows that increasing order and disorder are signatures of growing and decaying fibrils, respectively. We also observe SMLM-invisible fibril remodeling, including steady growth and decay patterns that conserve {$\beta$}-sheet organization. SMOLM reveals that increased fibril architectural heterogeneity is correlated with dynamic remodeling and that large-scale fibril remodeling tends to originate from strongly heterogeneous local regions.},
  copyright = {https://doi.org/10.15223/policy-029},
  langid = {english},
  pmcid = {PMC11612035},
  pmid = {38828968},
  keywords = {amyloid beta,dipole orientation,rotational diffusion,super-resolution microscopy,transient binding},
  file = {C:\Users\mattl\Box\Zotero\storage\EH6HTYSY\Sun et al. - 2024 - Single-Molecule Orientation Imaging Reveals the Nano-Architecture of Amyloid Fibrils Undergoing Grow.pdf},
  userc = {https://doi.org/10.1021/acs.nanolett.5c03960}
}

@article{kingMacromolecularCondensationOrganizes2024,
  title = {Macromolecular Condensation Organizes Nucleolar Sub-Phases to Set up a {{pH}} Gradient},
  author = {King, Matthew R. and Ruff, Kiersten M. and Lin, Andrew Z. and Pant, Avnika and Farag, Mina and Lalmansingh, Jared M. and Wu, Tingting and Fossat, Martin J. and Ouyang, Wei and Lew, Matthew D. and Lundberg, Emma and Vahey, Michael D. and Pappu, Rohit V.},
